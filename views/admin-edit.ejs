<style>
    .flexer {
        display: flex;
        flex-direction: row;
        gap: 0.5em;
    }
    
    .form-container {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }
    
    .date {
        width: 50%;
        height: 40px;
        border-radius: 5px;
        border: none;
    }
    
    input {
        width: 50% !important;
        border-radius: 5px;
        border: none;
    }
    
    form {
        width: 60%;
        border-radius: 5px;
        font-size: 13px;
        margin: auto;
    }
    
    .select-cont {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }
</style>

<form name="bookForm" action="/admin/admin/update" method="post">
    <div class="form-container">
        <div class="header">
            <h4>Update Booking</h4>
        </div>
        <div class="flexer">
            <input type="text" name="f_nm" value="<%= user.f_nm %>" placeholder="<%= user.f_nm %>">
            <input type="text" name="l_nm" value="<%= user.l_nm %>" placeholder="<%= user.l_nm %>">
            <input type="text" name="hotel" value="<%= user.hotel %>" placeholder="<%= user.hotel %>">
        </div>
        <div class="flexer">
            <label for="adults">Adults</label>

            <input type="number" id="adults" name="adults" value="<%= user.adults %>" placeholder="<%= user.adults %>">
            <label for="child">Children</label>

            <input type="number" name="children" value="<%= user.children %>">
            <label for="inf">Infants</label>

            <input type="number" name="infants" value="<%= user.infants %>">
        </div>
        <div class="flexer">
            <label for="bk-dt">Book Date</label>
            <input class="date" type="date" value="<%= user.bk_dt %>" name="bk_dt">
            <label for="exc-dt">Excursion Date</label>
            <input class="date" type="date" value="<%= user.exc_dt %>" name="exc_dt">
        </div>
        <div class="select-cont">
            <div class="flexer">
                <label for="program">Programs</label>
                <select name="program">
                        <option><%= list.program%></option>
                       
    
    
                        
                    </select>
                <div class="flexer">
                    <label for="tour_comp">Tour Company</label>
                    <select name="tour_co">
                                <option><%= list.tour_co%></option>
                                </select>
                </div>
            </div>

        </div>




        <button class="btn btn-success edit">Update</button>

    </div>


</form>
<div class="link">
    <button class="btn">        <a href="/view/view">Go Back</a>
    </button>

</div>